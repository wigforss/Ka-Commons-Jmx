	<version>0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Ka Commons JMX Base</name>
	<url>http://kasource.org</url>
	
	<description>
		Ka Commons JMX Base project.
	</description>
	
	 <licenses>
    	<license>
